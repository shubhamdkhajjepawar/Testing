    <rules>
        <fullName>WR_Opportunity Written Off</fullName>
        <actions>
            <name>Opportunity_write_off_approved</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Written Off</value>
        </criteriaItems>
        <description>When an opportunity is written off b/c membership is cancelled, select recipients are notified</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>WR_Opportunity Written Off Active</fullName>
        <actions>
            <name>EA_Written_Off_Active_Notification_to_Finance</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Written Off - Active</value>
        </criteriaItems>
        <description>When an opportunity is written off but membership is still active, select recipients are notified</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
